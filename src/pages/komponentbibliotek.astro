---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Heading from '../components/Heading.astro';
import Link from '../components/Link.astro';
import Card from '../components/Card.astro'
---
<MainLayout>

<h1 class="mb-5 text-5xl font-bold md: m-24">KOMPONENTBIBLIOTEK</h1>

<h2 class="mb-5 text-3xl font-bold md: m-24" >Button</h2>
<!-- start på buttons -->
<section class="container mx-auto m-sectiontop px-4">
<Heading htmlheading="h2" size="large" stylingclasses="m-sectionheading">Buttons</Heading>
<p><Button>Default knap</Button></p>
<p><Button variant="primary">Variant primary</Button></p>
<p><Button variant="primary" size="small">Variant primary size small</Button></p>
<p><Button variant="primary" size="medium">Variant primary size medium</Button></p>
<p><Button variant="primary" size="large">Variant primary size large</Button></p>
<p><Button variant="secondary" size="small">Variant secondary size small</Button></p>
<p><Button variant="secondary" size="medium">Variant secondary size medium</Button></p>
<p><Button variant="secondary" size="large">Variant secondary size large</Button></p>
<hr class="mt-20 border-accent">
</section>
<!-- slut på buttons -->

<h2 class="mb-5 text-3xl font-bold md: m-24" >Link</h2>

<!-- start på buttons -->
<section class="container mx-auto m-sectiontop px-4">
<Heading htmlheading="h2" size="large" stylingclasses="m-sectionheading">Links</Heading>
<p class="text-bold" ><Link href="#" variant="textlink" size="inherit">Default link</Link></p>
<p><Link variant="primary">Variant primary</Link></p>
<p><Link variant="primary" size="small">Variant primary size small</Link></p>
<p><Link variant="primary" size="medium">Variant primary size medium</Link></p>
<p><Link variant="primary" size="large">Variant primary size large</Link></p>
<p><Link variant="secondary" size="small">Variant secondary size small</Link></p>
<p><Link variant="secondary" size="medium">Variant secondary size medium</Link></p>
<p><Link variant="secondary" size="large">Variant secondary size large</Link></p>
<hr class="mt-20 border-accent">
</section>


<h2 class="mb-5 text-3xl font-bold md: m-24" >HEADING</h2>

<!-- start på typografi -->
<section class="container mx-auto m-sectiontop px-4">
<Heading  htmlheading="h2" size="large" stylingclasses="m-sectionheading">Typografi</Heading>
<Heading htmlheading="h1" size="xlarge">h1 xlarge</Heading>
<Heading htmlheading="h2" size="large">h2 large</Heading>
<Heading htmlheading="h3" size="medium">h3 medium</Heading>
<Heading htmlheading="h3" size="small">h4 small</Heading>
<p>Og her en sektion brødtekst</p>
<hr class="mt-20 border-accent">
</section>
<!-- slut på typografi -->

<h2 class="mb-5 text-3xl font-bold md: m-24" >CARD</h2>

<!-- start på card -->
 <div class="grid grid-cols-3 md:grid-cols-3 lg:grid-cols-3 gap-4 p-2 md: m-24">
<Card
	url="/singleview"
	cardimage="cardimg.jpg"
	cardimagealt="wine"
	cardtitel="Naturvin"
	cardtekst="Let, juicy og lidt funky. Ufiltreret naturvin med masser af karakter"
	cardbuttontekst="køb her"
	badgenyt="true"
	badgerabat="false"
	badgefaatilbage="false"
></Card>
</div>
<!-- slut på card -->

 </MainLayout>
